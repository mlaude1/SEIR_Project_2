<style>
    .back {
        margin: 30px 0 0 30px;
    }
    .show {
        /* border: 3px dashed purple; */
        width: fit-content;
        display: flex;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        /* box-sizing: border-box; */
        background-color: white;
        margin: 50px;
    }


    .left {
        /* border: 2px dashed blue; */
        /* padding: 65px 30px 30px 30px; */
        padding-top: 3%;
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    h1.name {
        /* border: 2px dashed red; */
        text-align: center;
        margin: unset;
        margin-top: 4%;
    }
    .model {
        /* border: 2px dashed red; */
        height: 720px;
        width: 720px;
        padding: 40px;
    }
    .left h4 {
        /* border: 2px dashed red; */
        padding: 30px;
    }


    .right {
        /* border: 6px solid yellow; */
        padding: 65px 30px 30px 30px;
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .name {
        color: black;
        font-weight: bold;
    }

    /* ============================== */
    .moveset {
        /* border: 2px dashed red; */
    }

    .neutral, .side, .up, .down {
        border: 2px solid black;
        border-radius: 8px;
        margin: 10px auto;
        display: flex;
        box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.2), 0 3px 10px 0 rgba(0, 0, 0, 0.19);
    }
    .neutral section, .side section, .up section, .down section {
        width: 100%;
    }
    .neutral .name, .side .name, .up .name, .down .name {
        width: 100%;
        border-top-right-radius: 5px;
        color: white;
        background-color: rgb(159, 27, 27);
    }
    .neutral .img, .side .img, .up .img, .down .img {
        /* border: 5px solid purple; */
        background-color: rgb(216, 33, 33);
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    div>section>div {
        padding: 5px 5px 5px 15px;
    }
        .neutral img {
            /* border: 1px dashed blue; */
            /* background-color: red; */
            width: 30px;
            box-sizing: unset;
            margin: 15px;
        }
    .side img, .up img, .down img{
        width: 30px;
        box-sizing: unset;
        margin: 0 15px
    }
        .side .img {
            background-color: rgb(43, 117, 227);
        }
        .side .name {
            background-color: rgb(30, 83, 164);
        }
        .up .img {
            background-color: rgb(218, 186, 80);
        }
        .up .name {
            background-color: rgb(199, 161, 34);
        }
        .down .img {
            background-color: rgb(72, 184, 104);
        }
        .down .name {
            background-color: rgb(61, 155, 88);
        }
/* ============================== */
    
        .fs {
            border: 2px solid black;
            border-radius: 10px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            width: 80%;
            margin: 10px;
        }
        .fs .head {
            border-bottom: 1.5px solid black;
            background-color: rgb(128, 0, 128);
            display: flex;
            justify-content: center;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }
        .fs .head img {
            /* border: 1px dashed red; */
            height: 35px;
            width: 35px;
        }
        .head h4 {
            /* border: 2px dashed orange; */
            color: white;
            font-weight: bold;
            font-size: 1.6em;
            margin: unset;
            text-align: center;
        }

        div.body {
            /* border: 2px dashed orange; */
            display: flex;
            flex-wrap: wrap;
            flex-direction: column;
            align-items: center;
            padding: unset;
        }
        .body img {
            /* border: 2px dashed blue; */
            height: 100%;
            width: 100%;
            max-height: 280px;
        }
        .body h3 {
            /* border: 2px dashed blue; */
            border-top: 1.5px solid black;
            border-bottom: 1.5px solid black;
            width: 100%;
            text-align: center;
            background-color: rgb(182, 14, 182);
            color: white;
            font-weight: bold;
            letter-spacing: inherit;
            margin: unset;
            padding: 6px;
        }
        .body p {
            /* border: 2px dashed blue; */
            padding: 20px;
            font-weight: bold;
            margin: unset;
            font-size: 1.2em;
            font-weight: bold;
        }

/* ============================== */
    .edit, .delete {
        margin-left: 50px;
    }
</style>

{% layout "layout.liquid" %}
{% block content %}

<a href="/smash"><button class="back">Back Home</button></a>

<article class="show">
    
    <div class="left">
        <h1 class="name">{{fighter.name}}</h1>
        <img class="model" src="{{fighter.img}}" alt="fighter img">     
        <h4>{{fighter.description}}</h4>
    </div>
    
    <div class="right">
        <div class="moveset">        
            <div class="neutral">
                <div class="img">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fmaxcdn.icons8.com%2FiOS7%2FPNG%2F512%2FGaming%2Fxbox_B_filled-512.png&f=1&nofb=1" alt="button">
                </div>
                <section>
                    <div class="name">{{fighter.b}}</div>
                    <div>{{fighter.bdet}}</div>
                </section>
            </div>
            
            <div class="side">
                <div class="img">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn4.iconfinder.com%2Fdata%2Ficons%2Fmini-arrows-2%2F16%2F62-512.png&f=1&nofb=1" alt="side direction">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fmaxcdn.icons8.com%2FiOS7%2FPNG%2F512%2FGaming%2Fxbox_B_filled-512.png&f=1&nofb=1" alt="button">
                </div>
                <section>
                    <div class="name">{{fighter.sideb}}</div>
                    <div>{{fighter.sidebdet}}</div>
                </section>
            </div>

            <div class="up">
                <div class="img">
                    <img src="https://cdn4.iconfinder.com/data/icons/mini-arrows-2/16/89-512.png" alt="up direction">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fmaxcdn.icons8.com%2FiOS7%2FPNG%2F512%2FGaming%2Fxbox_B_filled-512.png&f=1&nofb=1" alt="button">
                </div>
                <section>
                    <div class="name">{{fighter.upb}}</div>
                    <div>{{fighter.upbdet}}</div>
                </section>
            </div>
            
            <div class="down">
                <div class="img">
                    <img src="https://cdn4.iconfinder.com/data/icons/mini-arrows-2/16/98-1024.png" alt="down direction">
                    <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fmaxcdn.icons8.com%2FiOS7%2FPNG%2F512%2FGaming%2Fxbox_B_filled-512.png&f=1&nofb=1" alt="button">
                </div>
                <section>
                    <div class="name">{{fighter.downb}}</div>
                    <div>{{fighter.downbdet}}</div>
                </section>
            </div>
        </div>
        
        <section class="fs">
            <div class="head">
                <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fi.pinimg.com%2Foriginals%2F2e%2Fc5%2F2f%2F2ec52f4b3c8cb2ab991642a386a62b44.png&f=1&nofb=1" alt="smash ball">
                <h4>Final Smash</h4>
            </div>
            <div class="body">
                <img src="{{fighter.fsimg}}" alt="final smash img">
                <h3>{{fighter.fs}}</h3>
                <p>{{fighter.fsdet}}</p>
            </div>
           
        </section>

    </div>

</article>

    <a href="/smash/{{ fighter._id }}/edit" class="edit"><button>EDIT</button></a>
    <form action="/smash/{{ fighter._id }}?_method=DELETE" method="post">
    <input class="delete" type="submit" value="DELETE">
    </form>


{% endblock %}