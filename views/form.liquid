    <!-- OUR CSS AND JS -->
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
    <script src="/app.js" defer></script>
    
    <style>
    .container {
        /* border: 5px dashed purple; */
        margin: 20px auto !important;
        padding: 15px;
        width: 80vw;
        height: 70vw;
        display: flex;
    }
    
    .fighter {
        /* border: 4px dashed orange; */
        width: 50%;
        padding: 15px;
        background-color: #e7ecef;
        overflow: auto;
        vertical-align: 50%;
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
        border-right: 2px dashed rgb(213, 209, 209);
    }
    
    #create {
        color: white;
        background-color: rgb(83, 40, 182);
        border: 1px solid rgb(83, 40, 182);
        
    }
    #create:hover{
        background-color: rgb(125, 83, 225);
        transition: 0.2s ease;
    }

    #save {
        color: white;
        background-color: rgb(83, 40, 182);
        border: 1px solid rgb(83, 40, 182);
        
    }
    #save:hover{
        background-color: rgb(125, 83, 225);
        transition: 0.2s ease;
    }

    #delete {
        background-color: red;
        border: black;
        margin-top: 15%;
    }
    #delete:hover {
        background-color: white;
        color: red;
        border: 1px solid red;
        transition: 0.2s ease;
        box-shadow: 0 2px 10px 0 rgba(237, 15, 15, 0.2), 0 3px 10px 0 rgba(255, 2, 2, 0.19);
    }

    .fighter h1, .moveset h1 {
        text-align: center;
        margin: 10px
    }

    .moveset {
        /* border: 4px dashed blue; */
        width: 50%;
        padding: 15px;
        overflow: auto;
        background: #e7ecef;
        border-top-right-radius: 8px;
        border-bottom-right-radius: 8px;
    }

    /* MOVESET FORM */
    fieldset.neutral, fieldset.side, fieldset.up, fieldset.down, fieldset.fs, .fighter fieldset{
      border: 2px solid black;
      border-radius: 6px;
      padding: 10px;
      margin: 20px 0;
      border:2px solid rgb(245, 98, 98);
      box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.2), 0 3px 10px 0 rgba(0, 0, 0, 0.19);
    }
    fieldset.side {
        border: 2px solid rgb(43, 117, 227);
    }
    fieldset.up {
        border: 2px solid rgb(223, 203, 122);
    }
    fieldset.down {
        border: 2px solid rgb(72, 184, 104);
    }
    fieldset.fs {
        border: 2px solid rgb(182, 14, 182);
    }
    .fighter fieldset {
        border: none;
    }
    
    .neutral input[type="text"]:focus, .neutral textarea:focus {
        border: 1.7px solid rgb(238, 123, 123)  !important;
    }
    .side input[type="text"]:focus, .side textarea:focus {
        border: 1.7px solid rgb(114, 179, 235)  !important;
    }
    .up input[type="text"]:focus, .up textarea:focus {
        border: 1.7px solid rgb(196, 189, 105)  !important;
    }
    .down input[type="text"]:focus, .down textarea:focus {
        border: 1.7px solid rgb(81, 177, 88)  !important;
    }
    .fs input[type="text"]:focus, .fs textarea:focus {
        border: 1.7px solid rgb(145, 63, 186)  !important;
    }
    
    input[type="text"], textarea {
    background-color: #f5f3f4 !important;
    }
    
    label {
      font-weight: bold;
      color: black;
      display: block;
    }
    
    .fighter input[type="submit"] {
      width: 50%;
      color: whitesmoke;
      margin-left: 23%
      /* transition: 0.2s ease-in-out; */
    }
    
    input[type="submit"]:hover {
    /* cursor: pointer; */
    /* background: var(--bright-blue); */
    /* box-shadow: 2px 2px var(--purple); */
    }
    
    textarea {
      resize: none;
      height: 75px;
    }

    @media (max-width: 845px) {
      .container {
        /* border: 2px dashed orangered; */
        display: flex;
        flex-direction: column;
        align-items: center;
        height: fit-content;
      }
      .fighter, .moveset {
        width: 100%;
        margin: 15px;
      }
      .fighter {
        height: 100%;
        border-radius: 8px;
        padding: 10%
      }
      .moveset {
        border-radius: 8px;
        height: 100%;
      }
    }

    </style>

  </head>

