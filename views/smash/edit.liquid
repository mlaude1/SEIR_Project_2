{% layout "form.liquid" %}
{% block content %}

<div class="container">

    <div class="fighter">
        <h1>Fighter</h1>
        <form action="/smash/{{ fighter._id }}?_method=PUT" method="post">    
        <fieldset>
            <label>NAME</label>
                <input type="text" name="name" placeholder="Who's the fighter?" value="{{fighter.name}}">
            <label>IMAGE</label>
                <input type="text" name="img" placeholder="e.g. https://imgur.com/LEHS8h3.png" value="{{fighter.img}}">
            <label>DESCRIPTION</label>
            <!-- <input type="text" name="description" placeholder="Describe the fighter" value="{{fighter.description}}"> -->
            <textarea name="description" placeholder="Describe the fighter">{{fighter.description}}</textarea>
        </fieldset>
        <input id="save" type="submit" value="save">   

        <!-- <form class="delete" action="/smash/{{ fighter._id }}?_method=DELETE" method="post">
            <input id="delete" type="submit" value="DELETE">
        </form> -->
    </div>

    <div class="moveset">
        <h1>Moveset</h1>
        <fieldset class="neutral">
            <label>NEUTRAL B</label>
            <input type="text" name="b" placeholder="e.g. Fireball" value="{{fighter.b}}">
            <label>DETAIL</label>
            <textarea name="bdet">{{fighter.bdet}}</textarea>
        </fieldset>
        <fieldset class="side">
            <label>SIDE B</label>
            <input type="text" name="sideb" placeholder="e.g. Cape" value="{{fighter.sideb}}">
            <label>DETAIL</label>
            <textarea name="sidebdet">{{fighter.sidebdet}}</textarea>
        </fieldset>
        <fieldset class="up">
            <label>UP B</label>
            <input type="text" name="upb" placeholder="e.g. Super Jump Punch" value="{{fighter.upb}}">
            <label>DETAIL</label>
            <textarea name="upbdet">{{fighter.upbdet}}</textarea>
        </fieldset>
        <fieldset class="down">
            <label>DOWN B</label>
            <input type="text" name="downb" placeholder="e.g. F.L.U.D.D." value="{{fighter.downb}}">
            <label>DETAIL</label>
            <textarea name="downbdet">{{fighter.downbdet}}</textarea>
        </fieldset>
        
        <fieldset class="fs">
            <label>FINAL SMASH</label>
            <input type="text" name="fs" placeholder="e.g. Mario Finale" value="{{fighter.fs}}">
            <label>DETAIL</label>
            <textarea name="fsdet">{{fighter.fsdet}}</textarea>
            <label>FS IMAGE</label>
            <input type="text" name="fsimg" placeholder="e.g. https://imgur.com/LEHS8h3.png" value="{{fighter.fsimg}}">
        </fieldset>
    </form>

    <form class="delete" action="/smash/{{ fighter._id }}?_method=DELETE" method="post">
        <input id="delete" type="submit" value="DELETE">
    </form>
    
    </div>
</div>
  
<!-- </div> -->


{% endblock %}